@model IEnumerable<WebPizza.Models.ChiTietHoaDon>

@{
    ViewBag.Title = "ChiTietHoaDon";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/Content/cart/Css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pizza Time</title>

    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/css/shop-homepage.css" />
    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="~/Content/bootstrap.css">

    <!-- custom css file link  -->
    <link rel="stylesheet" href="~/css/Style.css">
</head>
<body>
    <header class="header" style="background-color: #ee9c9c">

        <a href="@Url.Action("Index","TrangChu")" class="logo"><i class="fas fa-utensils"></i>PIZZA FOR LIFE</a>

        <div id="menu-bar" class="fas fa-bars"></div>
        <nav class="navbar">
            @using WebPizza.Models
            @if (Session["TaiKhoan"] == null)
            {
                <a href="#order">
                    @Html.ActionLink("Đăng Nhập", "DangNhap", "KhachHang")
                </a>
            }
            else
            {
                DangNhap kh = (DangNhap)Session["Taikhoan"];
                <a href="#order">
                    @Html.ActionLink(kh.KhachHang.TenKH.ToString(), "info", "KhachHang")
                </a>
            }
            <a href="#order">
                @Html.ActionLink("Giỏ Hàng", "GioHang", "GioHang")
            </a>
        </nav>
    </header>
    <div class="container px-3 my-5 clearfix">
        <!-- Shopping cart table -->
        <div class="card">
            <div class="card-header">
                <h2> Chi Tiết Hóa Đơn </h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered m-0">
                        <thead>
                            <tr>
                                <!-- Set columns width -->
                                <th>
                                    @Html.DisplayNameFor(model => model.BanhPizza.TenBanh)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Size.LoaiSize)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LoaiVien.TenVien)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LoaiDe.TenDeBanh)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PhanThem.TenPT)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SoLuong)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TongGia)
                                </th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th> @Html.DisplayFor(modelItem => item.BanhPizza.TenBanh) </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.Size.LoaiSize)+
                                        @Html.DisplayFor(modelItem => item.Size.GTS)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.LoaiVien.TenVien)+
                                        @Html.DisplayFor(modelItem => item.LoaiVien.GTV)
                                    </th>
                                    <th> @Html.DisplayFor(modelItem => item.LoaiDe.TenDeBanh) </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.PhanThem.TenPT)+
                                        @Html.DisplayFor(modelItem => item.PhanThem.GTPhanThem)
                                    </th>
                                    <th> @Html.DisplayFor(modelItem => item.SoLuong) </th>
                                    <th> @Html.DisplayFor(modelItem => item.TongGia) </th>

                                </tr>

                            }
                        </thead>
                    </table>
                </div>
                <div class="float-right">
                    <button type="button" class="btn btn-lg btn-primary mt-2">
                        <td colspan="6">
                            @Html.ActionLink("Trở về ", "TheoDoiDonHang", "GioHang")
                        </td>
                    </button>
                </div>

            </div>
        </div>
    </div>
</body>
</html>
<style>
    a {
        color: red;
    }

    .btn-primary {
        background-color: #fc6;
        border: none;
    }

    .d-flex {
        margin-left: auto;
    }

    .h2, h2 {
        text-align: center;
    }

    .form-control {
        width: auto;
    }

    body {
        background-image: url('../../Content/images/2.jpg');
    }

    .table-bordered thead td, .table-bordered thead th {
        text-align: center;
    }

    .table-responsive {
        color: white;
    }
</style>

