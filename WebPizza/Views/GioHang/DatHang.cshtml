@model IEnumerable<WebPizza.Models.GioHang>

@{
    ViewBag.Title = "GioHang";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/Content/cart/Css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container px-3 my-5 clearfix">
        <!-- Shopping cart table -->
        <div class="card">
            <div class="card-header">
                <h2>THÔNG TIN ĐẶT HÀNG</h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered m-0">
                        <thead>
                            <tr>
                                <!-- Set columns width -->
                                <th>
                                    @Html.DisplayNameFor(model => model.tenbanh)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.hinh)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.soluong)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.vien)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.de)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.size)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.phanthem)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.giaban)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.thanhtien)
                                </th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                   <td>@Html.DisplayFor(modelItem => item.tenbanh)</td>
                                    <td><img src="~/Content/hinhsanpham/@item.hinh" width="100" height="100" /></td>
                                    <td>@Html.DisplayFor(modelItem => item.soluong)</td>
                                    <td>@Html.DisplayFor(modelItem => item.vien.TenVien) +
                                        @Html.DisplayFor(modelItem => item.Giavien)</td>
                                    <td>@Html.DisplayFor(modelItem => item.de.TenDeBanh) </td>
                                    <td>@Html.DisplayFor(modelItem => item.size.LoaiSize) +
                                        @Html.DisplayFor(modelItem => item.Giasize)</td>
                                    <td>@Html.DisplayFor(modelItem => item.phanthem.TenPT) +
                                        @Html.DisplayFor(modelItem => item.Giaphanthem  )</td>
                                    <td>@String.Format("{0:0,0}", item.giaban) VNĐ</td>
                                    <td>@Html.DisplayFor(modelItem => item.thanhtien) </td>
                                </tr>
                            }
                        </thead>
                    </table>
                </div>
                <!-- / Shopping cart table -->

                <div class="d-flex flex-wrap justify-content-between align-items-center pb-4">

                    <div class="d-flex">
                        <div class="text-right mt-4 mr-5">
                            <label class="text-muted font-weight-normal m-0">Số Loại</label>
                            <div class="text-large"><strong>@ViewBag.Tongsoluongsanpham</strong></div>
                        </div>
                        <div class="text-right mt-4 mr-5">
                            <label class="text-muted font-weight-normal m-0">Số Lượng</label>
                            <div class="text-large"><strong>@ViewBag.Tongsoluong</strong></div>
                        </div>
                        <div class="text-right mt-4">
                            <label class="text-muted font-weight-normal m-0">Tổng Tiền</label>
                            <div class="text-large"><strong>@String.Format("{0:0,0}", @ViewBag.Tongtien) VNĐ</strong></div>
                        </div>
                    </div>
                </div>

                
                @using WebPizza.Models
                <h2 style="text-align: center">Thông tin đặt hàng</h2>
                @{
                    DangNhap kh = (DangNhap)Session["Taikhoan"];
                }
                <table align="center">
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)
                        <tr style="height:40px">
                            <td>Họ tên khách hàng:  </td>
                            <td style="font-weight:bold">@kh.KhachHang.TenKH</td>
                        </tr>
                        <tr style="height:40px">
                            <td>Địa chỉ:  </td>
                            <td style="font-weight:bold">@kh.KhachHang.DiaChi</td>
                        </tr>
                        <tr style="height: 40px ">
                            <td>Số điện thoại: </td>
                            <td style="font-weight:bold">@kh.KhachHang.SDT</td>
                        </tr>
                        <tr style="height:40px">
                            <td>Ngày đặt: </td>
                            <td style="font-weight:bold">@DateTime.Now.ToShortDateString() </td>
                        </tr>
                        <tr style="height:40px">
                            <td></td>
                            <td style="font-weight:bold">
                                <button type="button" class="btn btn-lg btn-default md-btn-flat mt-2 mr-3" style="background-color: #fc6">
                                    @Html.ActionLink("Trở về giỏ hàng", "Giohang", "GioHang")
                                </button>
                            </td>
                            <td style="font-weight:bold">
                                <input type="submit" value="Xác nhận" class="btn btn-success" style="background-color: #fc6; margin-left: -344px; margin-bottom: -8px; border-color: fc6;color:red" />
                            </td>
                            <a class="btn btn-success" href="@Url.Action("ThanhToan","GioHang")"> Thanh Toán </a>
                        </tr>
                    }
            </div>
        </div>
    </div>
</body>
</html>
<style>
    a {
        color: red;
    }

    .btn-primary {
        background-color: #fc6;
        border: none;
    }

    .d-flex {
        margin-left: auto;
    }

    .h2, h2 {
        text-align: center;
    }

    .form-control {
        width: auto;
    }

    body {
        background-image: url('../../Content/Cart/image/hay.gif') background-position: center;
    }

    .table-bordered thead td, .table-bordered thead th {
        text-align: center;
    }

    .table-responsive {
        color: white;
    }
    
    .btn{
        padding: 0.5rem 1rem;
    }
    .btn{
        font-size:18px;
    }
</style>